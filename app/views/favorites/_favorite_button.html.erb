<% unless current_user == photo %>
<% if current_user.likes?(photo) %>
    <%= form_with(model: current_user.favorites.find_by(photo_id: photo.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :photo_id, photo.id %>
      <%= f.submit 'いいね！解除', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :photo_id, photo.id %>
      <%= f.submit 'いいね！', class: 'btn btn-success btn-block' %>
    <% end %>
  <% end %>
<% end %>